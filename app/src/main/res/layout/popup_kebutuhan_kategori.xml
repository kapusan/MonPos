<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="370dp"
        android:layout_height="440dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp">
    
    <android.support.constraint.ConstraintLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/ic_popup_kebutuhan"
                android:id="@+id/imageView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/namaKebutuhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pelayanan kesehatan"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="20dp"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                android:id="@+id/recyclerViewKebutuhan"
                android:stateListAnimator="@layout/list_posko"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textViewUpdate"
                app:layout_constraintHorizontal_bias="0.0">

        </android.support.v7.widget.RecyclerView>

        <ProgressBar
                android:id="@+id/progressBarKebutuhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewUpdate"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/recyclerViewKebutuhan"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

        <TextView

                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="KEMBALI"
                android:textSize="16dp"
                android:layout_marginBottom="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="8dp"
                android:id="@+id/textViewKembali"/>

        <TextView
                android:id="@+id/textViewUpdate"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="PERBARUI"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/textViewKembali"/>
        
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>