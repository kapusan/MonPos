<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" 
        android:layout_width="match_parent" 
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@android:color/white"
        android:layout_height="80dp">

    <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_banjir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView"/>

    <TextView
            android:id="@+id/textviewJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Tanah Longsor"
            android:inputType="textCapWords"
            android:capitalize="words"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="15dp"/>
    <TextView
            android:id="@+id/textViewLokasi"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            tools:text="Lamongan, Jawa Tengah"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textviewJudul" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"/>

</android.support.constraint.ConstraintLayout>