<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".ui.buatposko.BuatPoskoActivity">

    <ImageView
            android:id="@+id/imageViewStatic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/gambar_tenda"/>

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarPoskoBaru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Posko baru">
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TextInputEditText
            android:id="@+id/edittextNamaPosko"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_grey"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:maxLines="1"
            android:textSize="16dp"
            android:inputType="text"
            android:hint="@string/nama_posko"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageviewStatic1"
            app:layout_constraintTop_toBottomOf="@id/imageViewStatic"/>

    <ImageView
            android:id="@+id/imageviewStatic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/edittextNamaPosko"
            app:layout_constraintTop_toTopOf="@id/edittextNamaPosko"
            android:src="@drawable/icoon_tenda_buat_posko"/>

    <TextView
            android:id="@+id/textviewLokasi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_grey"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            tools:text="Karanganyar"
            android:textSize="16sp"
            android:maxLines="1"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageviewStatic1"
            app:layout_constraintTop_toBottomOf="@id/edittextNamaPosko"/>

    <ImageView
            android:id="@+id/imageviewStatic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textviewLokasi"
            app:layout_constraintTop_toTopOf="@id/textviewLokasi"
            android:src="@drawable/icon_location_buat_posko"/>

    <Button
            android:id="@+id/buttonSimpan"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="50dp"
            android:text="@string/simpan"
            android:textColor="#34c2a1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/white"/>

</android.support.constraint.ConstraintLayout>