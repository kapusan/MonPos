<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".ui.detailbencana.info.InfoFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:padding="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp">
                <ImageView
                        android:layout_width="18.98dp"
                        android:layout_height="25.82dp"
                        android:src="@drawable/ic_lokasi_detail"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="WONOGIRI, JAWA TENGAH"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/textViewLokasiInfo"/>

                <org.osmdroid.views.MapView
                        android:id="@+id/maps"
                        android:layout_width="match_parent"
                        android:layout_height="183dp"
                        tools:layout_editor_absoluteY="58dp"
                        tools:ignore="MissingConstraints"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLokasiInfo"/>

                <View
                        android:id="@+id/view_bencana1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/maps"
                        android:layout_marginLeft="20dp"/>

                <TextView
                        android:id="@+id/tvHilangText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HILANG"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/view_bencana1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="25dp"/>

                <TextView
                        android:id="@+id/tvHilangJumlah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="20"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/hijau"
                        app:layout_constraintTop_toBottomOf="@+id/view_bencana1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"/>

                <TextView
                        android:id="@+id/tvMeninggalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MENINGGAL"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvHilangText"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="25dp"/>

                <TextView
                        android:id="@+id/tvMeninggalJumlah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="20"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/hijau"
                        app:layout_constraintTop_toBottomOf="@+id/tvHilangJumlah"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"/>

                <TextView
                        android:id="@+id/tvTerlukaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TERLUKA"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvMeninggalText"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="25dp"/>

                <TextView
                        android:id="@+id/tvTerlukaJumlah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="20"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/hijau"
                        app:layout_constraintTop_toBottomOf="@+id/tvMeninggalJumlah"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"/>

                <TextView
                        android:id="@+id/tvMenderitaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MENDERITA"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/tvTerlukaText"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="25dp"/>

                <TextView
                        android:id="@+id/tvMenderitaJumlah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="20"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/hijau"
                        app:layout_constraintTop_toBottomOf="@+id/tvTerlukaJumlah"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"/>

                <View
                        android:id="@+id/view_bencana2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMenderitaText"
                        android:layout_marginLeft="20dp"/>

                <TextView
                        android:id="@+id/tvRumahrusak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rumah rusak"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/view_bencana2"/>

                <ImageView
                        android:layout_width="59dp"
                        android:layout_height="59dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvRumahrusak"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/ic_bulat_hijau"
                        android:layout_marginRight="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/imageView3"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="8"
                        android:textSize="28sp"
                        android:textColor="@color/hijau"
                        app:layout_constraintEnd_toEndOf="@+id/imageView3"
                        app:layout_constraintStart_toStartOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/imageView3"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        android:id="@+id/textViewJumlahSedang"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sedang"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_hijau"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        app:layout_constraintTop_toBottomOf="@+id/imageView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/textView2"/>

                <ImageView
                        android:layout_width="59dp"
                        android:layout_height="59dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvRumahrusak"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/ic_bulat_hijau"
                        android:layout_marginRight="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/imageView5" app:layout_constraintEnd_toStartOf="@+id/imageView3"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8"
                    android:textSize="28sp"
                    android:textColor="@color/hijau"
                    app:layout_constraintEnd_toEndOf="@+id/imageView5"
                    app:layout_constraintStart_toStartOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="@+id/imageView5"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                    android:id="@+id/textViewJumlahRingan"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ringan"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_hijau"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/textView6"
                    app:layout_constraintEnd_toStartOf="@+id/textView2"/>

            <ImageView
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRumahrusak"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_bulat_hijau"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:id="@+id/imageView7" app:layout_constraintStart_toEndOf="@+id/imageView3"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8"
                    android:textSize="28sp"
                    android:textColor="@color/hijau"
                    app:layout_constraintEnd_toEndOf="@+id/imageView7"
                    app:layout_constraintStart_toStartOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="@+id/imageView7"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                    android:id="@+id/textViewJumlahBerat"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berat"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_hijau"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/textView8"
                    app:layout_constraintStart_toEndOf="@+id/textView2"/>

            <View
                    android:id="@+id/view_bencana3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    android:layout_marginLeft="20dp"/>

            <TextView
                    android:id="@+id/textViewKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Anggota Tim Reaksi Cepat (TRC) BPBD Kabupaten PALI bersama TNI dan BRIMOB meninjau ke lapangan untuk melakukan pemadaman"
                    app:layout_constraintTop_toBottomOf="@+id/view_bencana3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>