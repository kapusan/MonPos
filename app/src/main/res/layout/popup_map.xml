<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    app:cardCornerRadius="10dp">

    <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

        <TextView
                android:id="@+id/map_popup_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                tools:text="TextView"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_marginStart="3dp"/>

        <TextView
                android:id="@+id/map_popup_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/map_popup_header"
                android:layout_below="@+id/map_popup_header"
                android:layout_marginTop="5dp"
                tools:text="TextView"
                android:textSize="12sp"
                android:layout_alignStart="@+id/map_popup_header"/>

        <TextView
                android:id="@+id/textview_detail"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:text="Lihat Detail"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#216dd5"
                android:layout_alignParentEnd="true"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/map_popup_body"
                android:drawableRight="@drawable/moreinfo_arrow"
                android:drawableEnd="@drawable/moreinfo_arrow"
                android:layout_alignParentRight="true"/>

        <TextView
                android:id="@+id/textview_navigasi"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Navigasi"
                android:textSize="22sp"
                android:textColor="#216dd5"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_navigation_black_24dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/map_popup_body"
                android:drawableStart="@drawable/ic_navigation_black_24dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>