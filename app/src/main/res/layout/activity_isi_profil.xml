<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blue_full2"
        tools:context=".ui.isiprofil.IsiProfilActivity">


    <!--<EditText-->
            <!--android:id="@+id/edtTglLahir"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="Tanggal lahir"-->
            <!--app:layout_constraintTop_toBottomOf="@id/edtJenisKel"/>-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan data diri"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/edtNama"/>

    <Button
            android:id="@+id/btnSimpan"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:text="simpan"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/hijau"
            android:background="@drawable/bg_line_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtNoTelefon"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

    <EditText
            android:id="@+id/edtNama"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:maxLength="15"
            android:hint="Nama lengkap"
            android:paddingStart="20dp"
            android:textColorHint="#CEF5E6"
            android:textColor="@color/white"
            android:paddingEnd="20dp"
            android:background="@drawable/bg_line_white"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="20dp" app:layout_constraintBottom_toTopOf="@+id/edtJenisKel"/>

    <EditText
            android:id="@+id/edtJenisKel"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:maxLength="15"
            android:hint="Jenis kelamin (L/P)"
            android:paddingStart="20dp"
            android:textColorHint="#CEF5E6"
            android:textColor="@color/white"
            android:paddingEnd="20dp"
            android:background="@drawable/bg_line_white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="75dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
            android:id="@+id/edtTglLahir"
            android:layout_width="329dp"
            android:layout_height="50dp"
            android:maxLength="15"
            android:hint="Tanggal lahir"
            android:paddingStart="20dp"
            android:textColorHint="#CEF5E6"
            android:textColor="@color/white"
            android:paddingEnd="20dp"
            android:background="@drawable/bg_line_white"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edtJenisKel"/>

    <EditText
            android:id="@+id/edtNoTelefon"
            android:layout_width="329dp"
            android:layout_height="50dp"
            android:maxLength="15"
            android:inputType="phone"
            android:hint="Nomor telefon"
            android:paddingStart="20dp"
            android:textColorHint="#CEF5E6"
            android:textColor="@color/white"
            android:paddingEnd="20dp"
            android:background="@drawable/bg_line_white"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edtTglLahir"/>

</android.support.constraint.ConstraintLayout>